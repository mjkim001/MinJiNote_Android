<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="130px"
    android:paddingRight="130px"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자 계정 생성"
        android:layout_marginTop="50px"
        android:textColor="@color/navy"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/add_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:src="@drawable/images"
        android:layout_alignParentLeft="true"
        android:onClick="addPhotoClick"
        android:scaleType="fitXY"
        android:maxHeight="100dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp"> <!-- 수평 -->

        <EditText
            android:id="@+id/signup_id"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:hint="ID"
            android:drawableStart="@drawable/edittext_id_size"
            android:drawablePadding="10dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/navy"
            android:backgroundTint="@color/navy"
            android:layout_marginLeft="5dp"
            android:text="CHECK"
            android:textColor="@color/white"
            android:onClick="checkOnClick"
            />

    </LinearLayout>


    <EditText
        android:id="@+id/signup_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:hint="암호"
        android:drawableStart="@drawable/edittext_pass_size"
        android:drawablePadding="10dp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/signup_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:hint="이름"
        android:drawableStart="@drawable/edittext_id_size"
        android:drawablePadding="10dp"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navy"
        android:backgroundTint="@color/navy"
        android:layout_marginTop="100dp"
        android:text="가입"
        android:textColor="@color/white"
        android:onClick="mOnClick"
        />
</LinearLayout>